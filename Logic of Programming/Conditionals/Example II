def salario (salario):

  salário_mínimo = 1518.00

  if salario < salário_mínimo:
      print("O salário está incorreto ou fora de legislação")
  else:
      print("Você recebe",salario - salário_mínimo, "reais a mais que o salário mínimo")

salariouser = float(input("digite seu salário: "))
salario(salariouser)
