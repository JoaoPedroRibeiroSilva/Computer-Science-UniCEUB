def salario (salario):
  salário_mínimo = 1518.00

  if salário < salário_mínimo:
      print("O salário está incorreto ou fora de legislação")
  else:
      print("Você recebe",salário - salário_mínimo, "reais a mais que o salário mínimo")

salario = float(input("digite seu salário:"))
salario (salario)
